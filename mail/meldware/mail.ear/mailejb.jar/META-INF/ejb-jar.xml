<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
 <ejb-jar>
	<enterprise-beans>
		<message-driven>
			<ejb-name>LocalDelivery</ejb-name>
			<ejb-class>org.buni.meldware.mail.delivery.DeliveryMDB</ejb-class>
			<transaction-type>Container</transaction-type>
            <message-driven-destination>
                <destination-type>javax.jms.Queue</destination-type>
            </message-driven-destination>
 			<env-entry>
			    <env-entry-name>MailListenerChain</env-entry-name>
			    <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>meldware.mail:type=MailListenerChain,name=LocalDeliveryChain</env-entry-value>
			</env-entry>
		</message-driven>
		<message-driven>
			<ejb-name>RemoteDelivery</ejb-name>
			<ejb-class>org.buni.meldware.mail.delivery.DeliveryMDB</ejb-class>
			<transaction-type>Container</transaction-type>
            <message-driven-destination>
                <destination-type>javax.jms.Queue</destination-type>
            </message-driven-destination>
 			<env-entry>
			    <env-entry-name>MailListenerChain</env-entry-name>
			    <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>meldware.mail:type=MailListenerChain,name=RemoteDeliveryChain</env-entry-value>
			</env-entry>
		</message-driven>
		<message-driven>
			<ejb-name>ListDelivery</ejb-name>
			<ejb-class>org.buni.meldware.mail.delivery.DeliveryMDB</ejb-class>
			<transaction-type>Container</transaction-type>
            <message-driven-destination>
                <destination-type>javax.jms.Queue</destination-type>
            </message-driven-destination>
 			<env-entry>
			    <env-entry-name>MailListenerChain</env-entry-name>
			    <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>meldware.mail:type=MailListenerChain,name=ListDeliveryChain</env-entry-value>
			</env-entry>
		</message-driven>
	</enterprise-beans>
</ejb-jar>
